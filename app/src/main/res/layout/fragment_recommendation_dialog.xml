<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.fragment.RecommendationDialogFragment">

    <ImageView
        android:id="@+id/illustration_personality"
        android:layout_width="140dp"
        android:layout_height="140dp"
        tools:src="@drawable/icon_kesepakatan"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/title_personality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="KETERBUKAAN TERHADAP PENGALAMAN"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/md_theme_tertiary_highContrast"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description_personality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="Anda cukup sosial dan antusias, meskipun tidak selalu mencari banyak interaksi."
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rekomendasi:"
        android:textAlignment="center"
        android:textColor="@color/md_theme_tertiary_highContrast"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recommendation_personality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Anda cukup sosial dan antusias, meskipun tidak selalu mencari banyak interaksi."
        android:textSize="16sp" />

</LinearLayout>
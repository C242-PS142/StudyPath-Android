<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.view.MainActivity">
<!--    EXAMPLE-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLACK"
        android:theme="@style/Theme.StudyPath.Text.Black"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLACK"
        android:textColor="@color/md_theme_primaryContainer"
        android:theme="@style/Theme.StudyPath.Text.Black"
        android:textSize="@dimen/text_size_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOLD"
        android:theme="@style/Theme.StudyPath.Text.Bold"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOLD"
        android:textColor="@color/md_theme_primary"
        android:textSize="@dimen/text_size_heading"
        android:theme="@style/Theme.StudyPath.Text.Bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEMI BOLD"
        android:theme="@style/Theme.StudyPath.Text.SemiBold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEMI BOLD"
        android:textColor="@color/md_theme_error"
        android:theme="@style/Theme.StudyPath.Text.SemiBold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MEDIUM"
        android:theme="@style/Theme.StudyPath.Text.Medium" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGULAR"
        android:theme="@style/Theme.StudyPath.Text.Regular" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIGHT"
        android:theme="@style/Theme.StudyPath.Text.Light" />
    <!--    EXAMPLE-->
</LinearLayout>
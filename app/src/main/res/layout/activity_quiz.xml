<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quiz_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.activity.QuizActivity">

    <!-- Progress Indicator -->
    <LinearLayout
        android:id="@+id/quiz_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@color/md_theme_primary" />

        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@color/md_theme_tertiary" />

        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@color/md_theme_tertiary" />

        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@color/md_theme_tertiary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quiz_indicator"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.3">

        <!-- Quiz Text -->
        <TextView
            android:id="@+id/quiz_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="I often forget to put things back in their proper place."
            android:textAppearance="@style/Theme.StudyPath.Text.Medium"
            android:layout_weight="0.5"/>

        <!-- Response Buttons -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/quiz_answer_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"/>

        <!-- Next Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Next"
            android:textAppearance="@style/Theme.StudyPath.Text.Medium"
            app:cornerRadius="@dimen/corner_radius_medium" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>